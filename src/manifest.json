{
    "manifest_version": 2,
    "name": "GCalTab",
    "description": "Google Calendar one tab away!",
    "version": "1.2.3",
    "author": "Florent Tassy",
    "homepage_url": "https://github.com/ftassy/GCalTab",
    "default_locale": "en",
    "applications": {
        "gecko": {
            "id": "gcaltab@ftassy.github.io",
            "strict_min_version": "68.0"
        }
    },
    "permissions": [
        "storage",
        "tabs",
        "https://calendar.google.com/*",
        "https://accounts.google.com/*",
        "https://google.com/calendar*",
        "https://keep.google.com/*",
        "https://tasks.google.com/*",
        "https://*.gstatic.com/*",
        "https://fonts.googleapis.com/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "GCalTab",
        "default_icon": "icons/gcaltab.png"
    },
    "icons": {
        "96": "icons/gcaltab-96px.png",
        "48": "icons/gcaltab-48px.png",
        "443": "icons/gcaltab.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://calendar.google.com/*",
                "https://accounts.google.com/*",
                "https://google.com/calendar*",
                "https://keep.google.com/*",
                "https://tasks.google.com/*",
                "https://*.gstatic.com/*",
                "https://fonts.googleapis.com/*"
            ],
            "js": [
                "lib/darkreader/darkreader.js",
                "js/gcaltab.js"
            ],
            "all_frames": true
        }
    ]
}