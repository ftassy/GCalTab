{
    "name": "gcaltab",
    "version": "2.0.0",
    "description": "Google Calendar one tab away!",
    "author": "Florent Tassy",
    "license": "MIT",
    "homepage": "https://github.com/ftassy/GCalTab",
    "repository": {
        "type": "git",
        "url": "https://github.com/ftassy/GCalTab.git"
    },
    "main": "gcaltab.js",
    "scripts": {
        "ls": "ls",
        "clean": "rm -r public/build",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public --no-clear",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "lint": "npx web-ext lint --source-dir=public",
        "startGnuLinux": "npx web-ext run --source-dir=public --browser-console -f thunderbird",
        "startMacOS": "npx web-ext run --source-dir=public --browser-console -f /Applications/Thunderbird.app/Contents/MacOS/thunderbird",
        "startUnixBeta": "npx web-ext run --source-dir=public --browser-console -f $THUNDERBIRD_BETA/thunderbird",
        "startUnix78": "npx web-ext run --source-dir=public --browser-console -f $THUNDERBIRD_78/thunderbird",
        "startUnix68": "npx web-ext run --source-dir=public --browser-console -f $THUNDERBIRD_68/thunderbird",
        "buildAddon": "npm run build && npx web-ext build --source-dir=public --ignore-files=*/*.js.map --overwrite-dest",
        "check-dep": "npm outdated && npm audit"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.1",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.0.0",
        "@tsconfig/svelte": "^3.0.0",
        "rollup": "^2.3.4",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^3.0.0",
        "svelte-check": "^2.0.0",
        "svelte-preprocess": "^4.0.0",
        "tslib": "^2.0.0",
        "typescript": "^4.0.0",
        "web-ext": "^7.1.0"
    },
    "dependencies": {
        "darkreader": "^4.9.51",
        "sirv-cli": "^2.0.0"
    }
}